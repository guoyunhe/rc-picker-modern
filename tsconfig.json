{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "baseUrl": "./",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@@/*": [
        ".dumi/tmp/*"
      ],
      "rc-picker": [
        "src/index.tsx"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "allowJs": true,
    "checkJs": false,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": [
      "node",
      "rive/globals"
    ]
  },
  "include": [
    ".dumirc.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "docs/examples/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    ".rive",
    "build",
    "coverage",
    "dist",
    "node_modules"
  ]
}
